					<option value="1">MOD_JVCYES</option>
				</field>
				<field name="jvclanguage" type="list" default="en" label="MOD_JVCOUNTER_LANG_LABEL" description="MOD_JVCOUNTER_LANG_DESC" >
					<option value="en">MOD_JVCLANG_EN</option>
					<option value="fr">MOD_JVCLANG_FR</option>
				</field>
			</fieldset>
			<fieldset name="DISPLAY_CONFIG">
				<field name="jvcshowtoday" type="radio" default="1" class="btn-group" label="MOD_JVCOUNTER_SHOWTODAY_VISITS_LABEL" description="MOD_JVCOUNTER_SHOWTODAY_VISITS_DESC"  >
					<option value="0">MOD_JVCNO</option>
					<option value="1">MOD_JVCYES</option>
				</field>
				<field name="jvcshowyesterday" type="radio" default="1" class="btn-group" label="MOD_JVCOUNTER_SHOWYESTERDAY_VISITS_LABEL" description="MOD_JVCOUNTER_SHOWYESTERDAY_VISITS_DESC"  >
					<option value="0">MOD_JVCNO</option>
					<option value="1">MOD_JVCYES</option>
				</field>
				<field name="jvcshowthisweek" type="radio" default="1" class="btn-group" label="MOD_JVCOUNTER_SHOWTHISWEEK_VISITS_LABEL" description="MOD_JVCOUNTER_SHOWTHISWEEK_VISITS_DESC"  >
					<option value="0">MOD_JVCNO</option>
					<option value="1">MOD_JVCYES</option>
				</field>
				<field name="jvcshowlastweek" type="radio" default="1" class="btn-group" label="MOD_JVCOUNTER_SHOWLASTWEEK_VISITS_LABEL" description="MOD_JVCOUNTER_SHOWLASTWEEK_VISITS_DESC"  >
					<option value="0">MOD_JVCNO</option>
					<option value="1">MOD_JVCYES</option>
				</field>
				<field name="jvcshowthismonth" type="radio" default="1" class="btn-group" label="MOD_JVCOUNTER_SHOWTHISMONTH_VISITS_LABEL" description="MOD_JVCOUNTER_SHOWTHISMONTH_VISITS_DESC"  >
					<option value="0">MOD_JVCNO</option>
