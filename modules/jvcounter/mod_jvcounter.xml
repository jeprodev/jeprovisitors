				</field>
				<field name="jvcshowlastmonth" type="radio" default="1" class="btn-group" label="MOD_JVCOUNTER_SHOWLASTMONTH_VISITS_LABEL" description="MOD_JVCOUNTER_SHOWLASTMONTH_VISITS_DESC"  >
					<option value="0">MOD_JVCNO</option>
					<option value="1">MOD_JVCYES</option>
				</field>
				<field name="jvcshowall" type="radio" default="1" class="btn-group" label="MOD_JVCOUNTER_SHOWALL_VISITS_LABEL" description="MOD_JVCOUNTER_SHOWALL_VISITS_DESC"  >
					<option value="0">MOD_JVCNO</option>
					<option value="1">MOD_JVCYES</option>
